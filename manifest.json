{
    "manifest_version": 2,
    "name": "Chrome App Window",
    "description": "Open any tab as a chrome app removing the titlebar",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab"
    ]
}